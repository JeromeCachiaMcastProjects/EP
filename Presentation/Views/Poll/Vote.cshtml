@model Domain.Models.Poll

<h2>Vote: @Model.Title</h2>

<form asp-action="Vote" method="post">
    <input type="hidden" name="pollId" value="@Model.Id" />

    <div class="mb-2">
        <button type="submit" name="option" value="1" class="btn btn-outline-primary w-100">
            @Model.Option1Text
        </button>
    </div>
    <div class="mb-2">
        <button type="submit" name="option" value="2" class="btn btn-outline-primary w-100">
            @Model.Option2Text
        </button>
    </div>
    <div class="mb-3">
        <button type="submit" name="option" value="3" class="btn btn-outline-primary w-100">
            @Model.Option3Text
        </button>
    </div>
</form>
